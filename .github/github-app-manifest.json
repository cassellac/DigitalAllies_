{
  "name": "Digital Allies Copilot Agent",
  "description": "GitHub Copilot agent with full repository access for Digital Allies website",
  "url": "https://digitalallies.net",
  "hook_attributes": {
    "url": "https://github.com/cassellac/DigitalAllies_"
  },
  "redirect_url": "https://github.com/cassellac/DigitalAllies_",
  "callback_urls": [
    "https://github.com/cassellac/DigitalAllies_"
  ],
  "public": false,
  "default_permissions": {
    "actions": "write",
    "administration": "read",
    "contents": "write",
    "issues": "write",
    "metadata": "read",
    "pull_requests": "write",
    "repository_hooks": "write",
    "repository_projects": "write",
    "statuses": "write"
  },
  "default_events": [
    "issues",
    "issue_comment", 
    "pull_request",
    "pull_request_review",
    "pull_request_review_comment",
    "push",
    "workflow_run"
  ],
  "request_oauth_on_install": false
}